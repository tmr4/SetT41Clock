<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SetT41Clock.MainPage">

  <ScrollView>
    <VerticalStackLayout
      Padding="30,0"
      Spacing="25">
      <Label Text="Select a COM port" Style="{StaticResource SubHeadline}" SemanticProperties.HeadingLevel="Level1" />
      <Picker x:Name="serialPortPicker" SelectedIndexChanged="serialPortPicker_SelectedIndexChanged" />
    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
